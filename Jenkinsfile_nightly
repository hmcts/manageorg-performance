#!groovy

properties([
    pipelineTriggers([cron('H 08 * * 1-5')]),
    parameters([
        choice(name: 'TEST_TYPE', choices: 'pipeline', description: 'Test type (must be \'pipeline\' for Jenkins use)')
    ])
])

@Library("Infrastructure@jenkins-alerts-poc")

def type = "java"
def product = "xui"
def component = "manage-org"

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [$class     : 'AzureKeyVaultSecret',
     secretType : 'Secret',
     name       : secretName,
     version    : '',
     envVariable: envVar
    ]
}

withNightlyPipeline("java", product, component) {
    // loadVaultSecrets(secrets)

    enablePerformanceTest(timeout=20, perfGatlingAlerts=true, perfRerunOnFail=true)

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }
}
